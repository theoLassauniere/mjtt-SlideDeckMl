Presentation EquationTest {

    Template
        fontName = "Times New Roman"
        fontSize = "1.7rem"
        fontColor = "#222222"
        backgroundColor = "white"

    Slide {
        title = "Premier Test"
        text
            text = "Ceci est un test de présentation."
    }
    Slide {
        title = "Ceci est un calcul de racine"
        mathContainer
            Equation {
                "x = (-b +- sqrt(b^2 - 4ac))/(2a)";
                "x1 = (-7 + sqrt(49 - (-32)))/(8)";
                "<=> x1 = (-7 + sqrt(81))/(8)";
                "<=> x1 = (-7 + 9)/(8)";
                "<=> x1 = 1/4";
            }
            description = "On peut appliquer la même formule pour calculer x2. Il suffit juste de remplacer le + par le -.
                    De cette manière, on est capable de factoriser notre équation de départ."
    }Slide {
        title = "Ceci est un second calcul de racine"
        mathContainer
            Equation {
                "x2 = (-7 - sqrt(49 - (-32)))/(8)";
                "<=> x2 = (-7 - sqrt(81))/(8)";
                "<=> x2 = (-7 - 9)/(8)";
                "<=> x2 = -2";
            }
    }
}