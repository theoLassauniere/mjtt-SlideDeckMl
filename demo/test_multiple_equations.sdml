Presentation EquationBigTest {

    Template
        fontName = "Times New Roman"
        fontSize = "1.4rem"
        fontColor = "#222222"
        backgroundColor = "white"

    Slide {
        title = "Premier Test"
        text
            text = "Ceci est un test de présentation."
    }
    Slide {
        title = "Ceci est un calcul de racine"
        grid 1:2 {
            1:1 {
                mathContainer
                    equation {
                        "x = (-b +- sqrt(b^2 - 4ac))/(2a)";
                        "x1 = (-7 + sqrt(49 - (-32)))/(8)";
                        "<=> x1 = (-7 + sqrt(81))/(8)";
                        "<=> x1 = (-7 + 9)/(8)";
                        "<=> x1 = 1/4";
                    }
                    description = "On peut appliquer la même formule pour calculer x2. Il suffit juste de remplacer le + par le -.
                            De cette manière, on est capable de factoriser notre équation de départ."
            }
            1:2 {
                mathContainer
                    equation {
                        "x2 = (-7 - sqrt(49 - (-32)))/(8)";
                        "<=> x2 = "(start)"(-7 - sqrt(81))/(8)"(end);
                        "<=> x2 = (-7 - 9)/(8)";
                        "<=> x2 = "(start)"(-16)/(8)"(end);
                        "<=> x2 = "(start)"-2"(end);
                    }
                    description = "Des parties seront animées plus tard"
            }
        }
    }
    Slide {
        title = "Définition de l'énergie mécanique"
        mathContainer
            equation {
                "E_(\"mécanique\") = color(red)(E_(\"cinétique\")) + color(blue)(E_(\"potentielle\"))";
                "color(red)(E_(\"cinétique\")) = 1/2 m v^2";
                "color(blue)(E_(\"potentielle\")) = m g h";
                "<=> E_(\"mécanique\") = color(red)(1/2 m v^2) + color(blue)(m g h)";
                "<=> E_(\"mécanique\") = m (color(red)(1/2 v^2) + color(blue)(g h))";
            }
    }
    Slide {
        title = "Définition de l'énergie mécanique"
        mathContainer
            equation {
                "3x + 12 = -27x +6";
                "<=> 3x + 12"(start)"+27x"(end)"= -27x"(start)"+27x"(end)"+ 6";
                "<=> "(start)"3x + 27x"(end)" + 12 = 6";
                "<=> "(start)"30x"(end)"+ 12 = 6";
                "<=> 30x + 12"(start)"-12"(end)" = 6"(start)"-12"(end);
                "<=> 30x = -6";
                "<=> x = -6/30";
                "<=> x = -1/5";
            }
            animations {
                2 = DEPLACER
                3 = SIMPLIFIER
                4 = DEPLACER
            }
    }
}