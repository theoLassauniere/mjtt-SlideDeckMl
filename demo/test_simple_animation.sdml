Presentation SimpleAnimation {

    Template
        fontName = "Times New Roman"
        fontSize = "1.4rem"
        fontColor = "#222222"
        backgroundColor = "white"

    Slide {
        title = "Définition de l'énergie mécanique"
        mathContainer
            equation {
                "3x + 12 = -27x +6";
                "<=> 3x + 12"(start)"+27x"(end)"= -27x"(start)"+27x"(end)"+ 6";
                "<=> "(start)"3x + 27x"(end)" + 12 = 6";
                "<=> "(start)"30x"(end)"+ 12 = 6";
                "<=> 30x + 12"(start)"-12"(end)" = 6"(start)"-12"(end);
                "<=> 30x = -6";
                "<=> x = -6/30";
                "<=> x = -1/5";
            }
            animations {
                2 = DEPLACER
                3 = SIMPLIFIER
                4 = DEPLACER
            }
    }
}