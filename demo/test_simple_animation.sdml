Presentation SimpleAnimation {

    Template
        fontName = "Times New Roman"
        fontSize = "1.4rem"
        fontColor = "#222222"
        backgroundColor = "white"

    Slide {
        title = "Equation du premier degr√©"
        mathContainer
            equation {
                "3x + 12 = -27x +6";
                "<=> 3x + 12"(start)"+27x"(end)"= -27x"(start)"+27x"(end)"+ 6", DEPLACER;
                "<=> "(start)"3x + 27x"(end)" + 12 = 6";
                "<=> "(start)"30x"(end)"+ 12 = 6", SIMPLIFIER;
                "<=> 30x + 12"(start)"-12"(end)" = 6"(start)"-12"(end), DEPLACER;
                "<=> 30x = -6";
                "<=> 30x"(start)"/30"(end)" = -6"(start)"/30"(end), DEPLACER;
                "<=> x = "(start)"-6/30"(end);
                "<=> x = "(start)"-1/5"(end), SIMPLIFIER;
            }
    }
}
