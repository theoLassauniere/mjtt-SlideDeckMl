Presentation GridSlide {
    numbered

    Template {
        fontName = "Roboto"
        fontSize = "1rem"
        fontColor = "#222222"
        titlesSize = "2rem"
        backgroundColor = "white"
    }

    Slide {
        title = "Premier Test"
        grid 2:2 {
            1:1 {
                text "Cellule 1:1"
                media "../assets/fox.mp4"
            }
            1:2 {
                grid 2:2 {
                    1:1 {
                        text "Cellule 1:1 dans 1:2"
                    }
                    2:2 {
                        text "Cellule 2:2 dans 1:2"
                    }
                    2:1 {
                        grid 1:2 {
                            1:1 {
                                text "Cellule 1:1 dans 2:1 dans 1:2"
                            }
                            1:2 {
                                text "Cellule 1:2 dans 2:1 dans 1:2"
                            }
                        }
                    }
                }
            }
            2:1-2 {
                text "Cellule 2:1-2, qui prend toute la largeur du bas"
            }
        }
    }
    Slide {
        grid 2:2 {
            2:1-2 {
                text "Cellule 2:1-2, qui prend toute la largeur du bas"
            }
        }
    }

    Slide {
        title = "Sondage"

        poll
            id = "poll-lang"
            chart = bar
            showResults = auto
            "Quel langage utilisez-vous pour les performances ?"
        {
            "C"
            "C++"
            "Rust"
            "Java"
            "Python"
        }
    }

    Slide {
        title = "Quiz : Algorithmes de tri"

        quiz
            id = "quiz-sort-1"
            showResults = onDemand
            "Quel algorithme est le plus performant en moyenne ?"
        {
            "Bubble Sort"
            "Quick Sort" correct
            "Insertion Sort"
            "Selection Sort"
        }
    }
}