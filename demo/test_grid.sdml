Presentation GridSlide {
    Template
        fontName = "Roboto"
        fontSize = "1rem"
        fontColor = "#222222"
        backgroundColor = "white"

    Slide {
        title = "Premier Test"
        grid 2:2 {
            1:1 {
                text
                    text = "Cellule 1:1"
                    media
                        mediaLink = "../assets/fox.mp4"
            }
            1:2 {
                grid 2:2 {
                    1:1 {
                        text
                            text = "Cellule 1:1 dans 1:2"
                    }
                    2:2 {
                        text
                            text = "Cellule 2:2 dans 1:2"
                    }
                    2:1 {
                        grid 1:2 {
                            1:1 {
                                text
                                    text = "Cellule 1:1 dans 2:1 dans 1:2"
                            }
                            1:2 {
                                text
                                    text = "Cellule 1:2 dans 2:1 dans 1:2"
                            }
                        }
                    }
                }
            }
            2:1-2 {
                text
                    text = "Cellule 2:1-2, qui prend toute la largeur du bas"
            }
        }
    }
    Slide {
        grid 2:2 {
            2:1-2 {
                text
                    text = "Cellule 2:1-2, qui prend toute la largeur du bas"
            }
        }
    }
}